<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2caca">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:id="@+id/vacio"
            />
        <TextView
            android:id="@+id/Result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vacio"
            android:hint="@string/cero"
            android:textAlignment="textEnd"
            android:textSize="60sp"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Result"
            android:id="@+id/Clean"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginLeft="15dp"
            android:background="#424242"
            android:text="C"
            android:textColor="#FF5722"
            android:textColorHighlight="#FFF"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Result"
            android:layout_toEndOf="@+id/Clean"
            android:layout_marginTop="@dimen/fab_margin"
            android:id="@+id/Divide"
            android:background="#424242"
            android:text="/"
            android:textColorHighlight="#FFF"
            android:textColor="#FF5722" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Result"
            android:layout_toEndOf="@+id/Divide"
            android:layout_marginTop="@dimen/fab_margin"
            android:id="@+id/Multiplica"
            android:background="#424242"
            android:text="X"
            android:textColor="#FF5722" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Result"
            android:layout_toEndOf="@+id/Multiplica"
            android:layout_marginTop="@dimen/fab_margin"
            android:id="@+id/Borrar"
            android:background="#424242"
            android:text="Borrar"
            android:textColor="#FF5722" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Clean"
            android:layout_marginLeft="15dp"
            android:id="@+id/Siete"
            android:background="#424242"
            android:textColorHighlight="#FFF"
            android:text="7"
            android:textColor="#FAFAFA" />

        <Button
            android:id="@+id/Ocho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Divide"
            android:layout_toEndOf="@+id/Siete"
            android:background="#424242"
            android:text="8"
            android:textColor="#FAFAFA" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Multiplica"
            android:layout_toEndOf="@+id/Ocho"
            android:id="@+id/Nueve"
            android:background="#424242"
            android:text="9"
            android:textColor="#FAFAFA" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Borrar"
            android:id="@+id/Resta"
            android:layout_toEndOf="@id/Nueve"
            android:background="#424242"
            android:text="-"
            android:textColor="#FF5722" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Siete"
            android:layout_marginLeft="15dp"
            android:id="@+id/Cuatro"
            android:background="#424242"
            android:text="4"
            android:textColor="#FAFAFA" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Ocho"
            android:id="@+id/Cinco"
            android:layout_toEndOf="@id/Cuatro"
            android:background="#424242"
            android:text="5"
            android:textColor="#FAFAFA" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Nueve"
            android:id="@+id/Seis"
            android:layout_toEndOf="@id/Cinco"
            android:background="#424242"
            android:text="6"
            android:textColor="#FAFAFA" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Resta"
            android:id="@+id/Suma"
            android:layout_toEndOf="@id/Seis"
            android:background="#424242"
            android:text="+"
            android:textColor="#FF5722" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Cuatro"
            android:layout_marginLeft="15dp"
            android:id="@+id/Uno"
            android:background="#424242"
            android:text="1"
            android:textColor="#FAFAFA" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Cinco"
            android:layout_toEndOf="@id/Uno"
            android:id="@+id/Dos"
            android:background="#424242"
            android:text="2"
            android:textColor="#FAFAFA" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Seis"
            android:layout_toEndOf="@id/Dos"
            android:id="@+id/Tres"
            android:background="#424242"
            android:text="3"
            android:textColor="#FAFAFA" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Suma"
            android:layout_toEndOf="@id/Tres"
            android:id="@+id/Igual"
            android:background="#424242"
            android:text="="
            android:textColor="#FF5722" />

        <Button

            android:id="@+id/Cero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Dos"
            android:layout_toEndOf="@id/vac"
            android:layout_columnSpan="3"
            android:background="#424242"
            android:text="0"
            android:textColor="#FAFAFA" />
        <Button
            android:id="@+id/vac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:text=""
            android:layout_below="@id/Uno"
            android:background="#424242"

            />
        <Button
            android:id="@+id/vac2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/Tres"
            android:layout_toEndOf="@id/Cero"
            android:background="#424242"

            />
        <Button
            android:id="@+id/vac3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/Igual"
            android:layout_toEndOf="@id/vac2"
            android:background="#424242"

            />




</RelativeLayout>

</android.support.constraint.ConstraintLayout>